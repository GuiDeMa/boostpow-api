{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6", "ES2015", "ES2016", "ES2017", "es2020", "DOM"
    ],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "dist",
		"sourceRoot": ".",
    "inlineSourceMap": true,
    "types": ["node"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/test"
  ]
}
